
<%= stylesheet_link_tag  'custom' %>


<div class="install-box">
  <div class="row">
    <div class="install-quote col-md-6">
      <div class="quote">
        Download BK SYNC
        <span>
          Your stuff, everwhere
        </span>
      </div>
      <div class="install-link">
        <button class="btn btn-primary btn-block" onclick="download_file(this)">
          <%= t('download_btn') %>
        </button>
      </div>

    </div>

    <div class="highlight col-md-6">
      <pre>
        <code class="bash">
          <span> $ wget http://192.168.50.13/bksyncd/install.sh </span>
          <span> $ source install.sh </span>
          <span> $ service bksyncd start </span>
        </code>

      </pre>

    </div>
  </div>

</div>

<script type="text/javascript">
  var download_file = function(e) {
    $('<iframe style="display:none" src="'+"/bksyncd/install.sh"+'"/>').appendTo("body");
  }
</script>
